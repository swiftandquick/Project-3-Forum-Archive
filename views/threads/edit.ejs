<!-- boilerplate.ejs set up the general layout for this ejs file. -->
<% layout('layouts/boilerplate')%>
<!-- The form goes submit a PUT requests on localhost:3000/threads/:id, which overrides POST request.  
    The form's inputs have values equal to thread object's currently title and content values.  -->
<div class="row">
  <h1 class="text-center">Edit Thread</h1>
  <div class="col-6 offset-3">
    <form action="/threads/<%=thread._id%>?_method=PUT" method="POST">
      <div>
        <div class="mb-3">
          <label class="form-label" for="title">Title</label>
          <input
            class="form-control"
            type="text"
            id="title"
            name="thread[title]"
            value="<%=thread.title%>"
          />
        </div>
        <div class="mb-3">
          <label class="form-label" for="content">Content</label>
          <textarea
            class="form-control"
            rows="5"
            cols="50"
            id="content"
            name="thread[content]"
          >
<%=thread.content%></textarea
          >
        </div>
        <div class="mb-3">
          <button class="btn btn-success">Update Thread</button>
        </div>
      </div>
    </form>
  </div>
</div>
